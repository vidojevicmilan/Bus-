<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nocomment.bus" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="Linije" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Omiljene"
            android:label="Omiljene Linije" >
        </activity>
        <activity
            android:name=".Istorija"
            android:label="Poslednje Korišćene Linije" >
        </activity>
        <activity
            android:name=".AB"
            android:label="Prikaz rute A-B" >
        </activity>
        <activity
            android:name=".Kontakt"
            android:label="@string/title_activity_kontakt" >
        </activity>
        <activity
            android:name=".RedVoznje"
            android:label="@string/title_activity_red_voznje"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nocomment.bus.MainActivity" />
        </activity>

    </application>

</manifest>
